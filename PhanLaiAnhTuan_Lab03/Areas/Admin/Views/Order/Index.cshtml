@model IEnumerable<PhanLaiAnhTuan_Lab03.Models.Order>
@{
    ViewData["Title"] = "Quản lý đơn hàng";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Quản lý đơn hàng</h2>

<table class="table table-bordered">
    <thead>
        <tr>
            <th>Đơn #</th>
            <th>Khách hàng</th>
            <th>Ngày đặt</th>
            <th>Tổng tiền</th>
            <th>Trạng thái</th>
            <th>Hành động</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.ApplicationUser?.Email</td>
                <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                <td>@order.TotalPrice.ToString("C")</td>
                <td>@order.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id" class="btn btn-info btn-sm">Chi tiết</a>
                    @if (order.Status == "Chờ Xác nhận")
                    {
                        <a asp-action="Confirm" asp-route-id="@order.Id" class="btn btn-success btn-sm">✔ Xác nhận</a>
                        <a asp-action="Cancel" asp-route-id="@order.Id" class="btn btn-danger btn-sm">✘ Hủy</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
