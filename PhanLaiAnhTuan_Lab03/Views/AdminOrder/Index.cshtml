@model IEnumerable<PhanLaiAnhTuan_Lab03.Models.Order>

<h2>Quản lý đơn hàng</h2>

@if (TempData["Message"] != null)
{
    <div class="alert alert-success">@TempData["Message"]</div>
}
@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<table class="table">
    <thead>
        <tr>
            <th>Mã đơn</th>
            <th>Ngày đặt</th>
            <th>Trạng thái</th>
            <th>Thao tác</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.Id</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Status</td>
                <td>
                    @if (order.Status != "Đã xác nhận")
                    {
                        <a asp-action="Confirm" asp-route-id="@order.Id" class="btn btn-success btn-sm"
                           onclick="return confirm('Xác nhận đơn hàng và trừ kho?')">Xác nhận</a>
                    }
                    else
                    {
                        <span class="text-muted">Đã xác nhận</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
