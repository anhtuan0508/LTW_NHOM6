@model PhanLaiAnhTuan_Lab03.Models.Product

@{
    ViewData["Title"] = "Xóa sản phẩm";
}

<h1>@ViewData["Title"]</h1>

<h3>Bạn có chắc muốn xóa sản phẩm này?</h3>

<div>
    <h4>@Model.Name</h4>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="~/images/@Model.ImageUrl" alt="@Model.Name" style="max-height: 150px;" />
    }

    <dl class="row mt-3">
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Danh mục</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<form asp-action="Delete" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
