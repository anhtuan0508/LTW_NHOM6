@model PhanLaiAnhTuan_Lab03.Models.Product

@{
    ViewData["Title"] = "Chi tiết thú cưng";
}

<h1>@ViewData["Title"]</h1>

<div>
    <h3>@Model.Name</h3>

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <img src="~/images/@Model.ImageUrl" alt="@Model.Name" style="max-height: 250px;" />
    }

    <dl class="row mt-3">
        <dt class="col-sm-2">Giá</dt>
        <dd class="col-sm-10">@Model.Price.ToString("C")</dd>

        <dt class="col-sm-2">Loài</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>

        <dt class="col-sm-2">Mô tả</dt>
        <dd class="col-sm-10">@Model.Description</dd>
    </dl>
</div>

<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-warning">Sửa</a>
    <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
</p>
