@model IEnumerable<PhanLaiAnhTuan_Lab03.Models.Order>

@{
    ViewData["Title"] = "Lịch sử đơn hàng";
}

<h2>Lịch sử đơn hàng</h2>

@if (!Model.Any())
{
    <p>Bạn chưa có đơn hàng nào.</p>
}
else
{
    <table class="table table-bordered">
        <thead>
            <tr>
                <th>Mã đơn</th>
                <th>Ngày đặt</th>
                <th>Tổng tiền</th>
                <th>Trạng thái</th>
                <th>Chi tiết</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var order in Model)
            {
                <tr>
                    <td>#@order.Id</td>
                    <td>@order.OrderDate.ToString("dd/MM/yyyy")</td>
                    <td>@order.TotalPrice.ToString("C")</td>
                    <td>@order.Status</td>
                    <td>
                        <a asp-area="" asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" class="btn btn-sm btn-info">Xem</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
