@model ShoppingCart

@{
    ViewData["Title"] = "Giỏ hàng";
}

<h2 class="mb-4">🛒 Giỏ hàng của bạn</h2>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">Giỏ hàng đang trống.</div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">← Quay lại mua hàng</a>
}
else
{
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>Thú cưng</th>
                <th style="width: 150px;">Số lượng</th>
                <th>Giá</th>
                <th>Tổng</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <a asp-action="UpdateQuantity" asp-route-productId="@item.ProductId" asp-route-quantity="@(item.Quantity - 1)" class="btn btn-sm btn-outline-secondary me-1" title="Giảm">
                                <i class="bi bi-dash"></i>
                            </a>
                            <span>@item.Quantity</span>
                            <a asp-action="UpdateQuantity" asp-route-productId="@item.ProductId" asp-route-quantity="@(item.Quantity + 1)" class="btn btn-sm btn-outline-secondary ms-1" title="Tăng">
                                <i class="bi bi-plus"></i>
                            </a>
                        </div>
                    </td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@((item.Price * item.Quantity).ToString("C"))</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn btn-sm btn-danger">
                            <i class="bi bi-trash"></i> Xóa
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
            ← Tiếp tục mua
        </a>

        <h5 class="text-end">Tổng: <strong>@Model.Total.ToString("C")</strong></h5>

        <a asp-action="Checkout" class="btn btn-success">
            <i class="bi bi-bag-check"></i> Đặt hàng
        </a>
    </div>
}
