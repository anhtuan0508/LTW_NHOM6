@model ShoppingCart
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h2 class="mb-4">@Localizer["CartHeader"]</h2>

@if (!Model.Items.Any())
{
    <div class="alert alert-info">@Localizer["EmptyCartMessage"]</div>
    <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">@Localizer["BackToShoppingButton"]</a>
}
else
{
    <table class="table table-bordered">
        <thead class="table-light">
            <tr>
                <th>@Localizer["PetColumn"]</th>
                <th style="width: 150px;">@Localizer["QuantityColumn"]</th>
                <th>@Localizer["PriceColumn"]</th>
                <th>@Localizer["TotalColumn"]</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>
                        <div class="d-flex align-items-center">
                            <a asp-action="UpdateQuantity" asp-route-productId="@item.ProductId" asp-route-quantity="@(item.Quantity - 1)" class="btn btn-sm btn-outline-secondary me-1" title="@Localizer["DecreaseTitle"]">
                                <i class="bi bi-dash"></i>
                            </a>
                            <span>@item.Quantity</span>
                            <a asp-action="UpdateQuantity" asp-route-productId="@item.ProductId" asp-route-quantity="@(item.Quantity + 1)" class="btn btn-sm btn-outline-secondary ms-1" title="@Localizer["IncreaseTitle"]">
                                <i class="bi bi-plus"></i>
                            </a>
                        </div>
                    </td>
                    <td>@item.Price.ToString("C")</td>
                    <td>@((item.Price * item.Quantity).ToString("C"))</td>
                    <td>
                        <a asp-action="RemoveFromCart" asp-route-productId="@item.ProductId" class="btn btn-sm btn-danger">
                            @Html.Raw(Localizer["RemoveButton"].Value)
                        </a>
                    </td>
                </tr>
            }
        </tbody>
    </table>

    <div class="d-flex justify-content-between align-items-center mt-3">
        <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
            @Localizer["ContinueShoppingButton"]
        </a>

        <h5 class="text-end">@Localizer["TotalLabel"]: <strong>@Model.Total.ToString("C")</strong></h5>

        <a asp-action="Checkout" class="btn btn-success">
            @Html.Raw(Localizer["CheckoutButton"].Value)
        </a>
    </div>
}