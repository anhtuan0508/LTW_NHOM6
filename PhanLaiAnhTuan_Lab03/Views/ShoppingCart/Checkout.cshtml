@model Order

<h2 class="mb-4">🛒 Xác nhận đặt hàng</h2>

<form asp-action="Checkout" method="post">
    <div class="row g-3">
        <div class="col-md-6">
            <label for="FullName" class="form-label">Họ tên</label>
            <input type="text" name="FullName" class="form-control" placeholder="Nhập họ tên người nhận" required />
        </div>
        <div class="col-md-6">
            <label for="PhoneNumber" class="form-label">Số điện thoại</label>
            <input type="tel" name="PhoneNumber" class="form-control" placeholder="VD: 0987654321" required pattern="^\d{9,11}$" />
        </div>
        <div class="col-12">
            <label asp-for="ShippingAddress" class="form-label">Địa chỉ giao hàng</label>
            <input asp-for="ShippingAddress" class="form-control" placeholder="VD: 123 Đường ABC, Quận XYZ, TP.HCM" required />
        </div>
    </div>

    <div class="mt-4">
        <button type="submit" class="btn btn-success px-4">🚚 Xác nhận đặt hàng</button>
        <a asp-controller="ShoppingCart" asp-action="Index" class="btn btn-outline-secondary ms-2">⬅️ Quay lại giỏ hàng</a>
    </div>
</form>
