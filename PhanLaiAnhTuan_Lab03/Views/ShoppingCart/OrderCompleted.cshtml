@model int
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h2>@Localizer["SuccessHeader"]</h2>
<p>@Html.Raw(Localizer["SuccessMessage"].Value.Replace("#OrderId", Model.ToString()))</p>
<a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">@Localizer["ContinueShoppingButton"]</a>