@model PhanLaiAnhTuan_Lab03.Models.Product

@{
    ViewData["Title"] = "Chi tiết thú cưng";
}

<h2 class="mb-4">@Model.Name</h2>

<div class="row">
    <div class="col-md-6">
        <img src="@Model.ImageUrl"
             class="img-fluid rounded-circle shadow-sm"
             style="max-height: 300px; object-fit: cover;"
             alt="@Model.Name" onerror="this.src='https://via.placeholder.com/300?text=No+Image';" />
    </div>
    <div class="col-md-6">
        <h4 class="text-danger">@Model.Price.ToString("C")</h4>
        <p><strong>Loài:</strong> @Model.Category?.Name</p>
        <p><strong>Mô tả:</strong> @Model.Description</p>

        <form asp-controller="ShoppingCart" asp-action="AddToCart" method="post">
            <input type="hidden" name="productId" value="@Model.Id" />
            <input type="hidden" name="quantity" value="1" />
            <button type="submit" class="btn btn-success">
                <i class="bi bi-cart-plus"></i> Thêm vào giỏ
            </button>
        </form>

        <a asp-action="Index" class="btn btn-secondary mt-2">⬅ Quay lại</a>
    </div>
</div>