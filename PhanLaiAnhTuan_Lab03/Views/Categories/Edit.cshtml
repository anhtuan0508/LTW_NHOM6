@model PhanLaiAnhTuan_Lab03.Models.Category
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h2 class="mt-4">@Localizer["EditHeader"]</h2>

<form asp-action="Edit" method="post">
    <input type="hidden" asp-for="Id" />
    <div class="form-group">
        <label asp-for="Name">@Localizer["CategoryNameLabel"]</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">@Localizer["SaveChangesButton"]</button>
    <a asp-action="Index" class="btn btn-secondary">@Localizer["CancelButton"]</a>
</form>