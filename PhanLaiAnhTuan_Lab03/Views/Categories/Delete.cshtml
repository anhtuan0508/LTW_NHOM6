@model PhanLaiAnhTuan_Lab03.Models.Category
@{
    ViewData["Title"] = "Xóa danh mục";
    bool hasSubCategories = ViewBag.HasSubCategories != null && (bool)ViewBag.HasSubCategories;
}

<h2>@ViewData["Title"]</h2>

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <p>@error.ErrorMessage</p>
        }
    </div>
}

@if (hasSubCategories)
{
    <div class="alert alert-warning">
        Danh mục này hiện đang chứa các danh mục con. Bạn có chắc chắn muốn xóa không?
    </div>
}
else
{
    <h4>Bạn có chắc muốn xóa danh mục này?</h4>
}

<div>
    <h4>@Model.Name</h4>
</div>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Xóa</button>
    <a asp-action="Index" class="btn btn-secondary">Hủy</a>
</form>
