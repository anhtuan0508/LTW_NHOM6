@model PhanLaiAnhTuan_Lab03.Models.Category
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = Localizer["PageTitle"];
}

<h2>@ViewData["Title"]</h2>

<form asp-action="Create" method="post" class="mt-3">
    <div class="mb-3">
        <label asp-for="Name" class="form-label">@Localizer["CategoryNameLabel"]</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">@Localizer["SaveButton"]</button>
    <a asp-action="Index" class="btn btn-secondary ms-2">@Localizer["CancelButton"]</a>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}