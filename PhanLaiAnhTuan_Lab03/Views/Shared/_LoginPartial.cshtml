@using Microsoft.AspNetCore.Identity
@using PhanLaiAnhTuan_Lab03.Models
@using Microsoft.AspNetCore.Mvc.Localization
@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
@inject IViewLocalizer Localizer

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a id="manage" class="nav-link text-dark" inadvertent="Identity" asp-page="/Account/Manage/Index" title="@Localizer["ManageAccountTitle"]">
                @Html.Raw(Localizer["GreetingMessage"].Value.Replace("#UserName", UserManager.GetUserName(User)))
            </a>
        </li>
        <li class="nav-item">
            <form id="logoutForm" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Product", new { area = "" })" method="post">
                <button id="logout" type="submit" class="nav-link btn btn-outline-danger border-0">
                    @Html.Raw(Localizer["LogoutButton"].Value)
                </button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link text-dark" id="register" asp-area="Identity" asp-page="/Account/Register">
                @Html.Raw(Localizer["RegisterLink"].Value)
            </a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark" id="login" asp-area="Identity" asp-page="/Account/Login">
                @Html.Raw(Localizer["LoginLink"].Value)
            </a>
        </li>
    }
</ul>