@using System.Globalization
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer
<!DOCTYPE html>
<html lang="@CultureInfo.CurrentCulture.Name">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - @Localizer["PageTitleSuffix"]</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800&display=swap" rel="stylesheet">
    <style>
        :root {
            --primary-color: #1a73e8;
            --primary-hover: #1557b0;
            --secondary-color: #34a853;
            --accent-color: #ff6b35;
            --text-primary: #202124;
            --text-secondary: #5f6368;
            --border-color: #e8eaed;
            --bg-light: #fafbfc;
            --bg-white: #ffffff;
            --shadow-sm: 0 1px 3px rgba(0,0,0,0.12), 0 1px 2px rgba(0,0,0,0.24);
            --shadow-md: 0 4px 6px rgba(0,0,0,0.07), 0 2px 4px rgba(0,0,0,0.06);
            --shadow-lg: 0 10px 15px rgba(0,0,0,0.1), 0 4px 6px rgba(0,0,0,0.05);
        }

        * {
            box-sizing: border-box;
        }

        body {
            font-family: 'Inter', sans-serif;
            background: var(--bg-light);
            color: var(--text-primary);
            line-height: 1.6;
            font-weight: 400;
        }

        .announcement-bar {
            background: linear-gradient(135deg, var(--secondary-color), #2d7d32);
            color: white;
            padding: 8px 0;
            font-size: 13px;
            font-weight: 500;
            text-align: center;
        }

            .announcement-bar .container {
                display: flex;
                justify-content: space-between;
                align-items: center;
            }

            .announcement-bar .contact-info {
                display: flex;
                gap: 24px;
                align-items: center;
            }

            .announcement-bar .shipping-info {
                font-weight: 600;
            }

        .main-header {
            background: var(--bg-white);
            border-bottom: 1px solid var(--border-color);
            box-shadow: var(--shadow-sm);
            position: sticky;
            top: 0;
            z-index: 1000;
        }

        .navbar {
            padding: 16px 0;
        }

        .navbar-brand {
            font-size: 32px;
            font-weight: 800;
            color: var(--primary-color) !important;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
        }

            .navbar-brand:hover {
                color: var(--primary-hover) !important;
            }

            .navbar-brand .logo-icon {
                font-size: 36px;
                background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
                -webkit-background-clip: text;
                -webkit-text-fill-color: transparent;
                background-clip: text;
            }

        .nav-actions {
            display: flex;
            align-items: center;
            gap: 12px;
        }

        .nav-btn {
            background: transparent;
            border: 2px solid var(--border-color);
            color: var(--text-primary);
            padding: 10px 20px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 14px;
            text-decoration: none;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.2s ease;
            white-space: nowrap;
        }

            .nav-btn:hover {
                border-color: var(--primary-color);
                color: var(--primary-color);
                background: rgba(26, 115, 232, 0.04);
                transform: translateY(-1px);
            }

            .nav-btn.primary {
                background: var(--primary-color);
                border-color: var(--primary-color);
                color: white;
            }

                .nav-btn.primary:hover {
                    background: var(--primary-hover);
                    border-color: var(--primary-hover);
                    color: white;
                }

        .cart-button {
            position: relative;
            background: transparent;
            border: 2px solid var(--border-color);
            color: var(--text-primary);
            padding: 12px;
            border-radius: 12px;
            transition: all 0.2s ease;
            display: flex;
            align-items: center;
            justify-content: center;
            min-width: 48px;
            height: 48px;
        }

            .cart-button:hover {
                border-color: var(--primary-color);
                color: var(--primary-color);
                background: rgba(26, 115, 232, 0.04);
                transform: translateY(-1px);
            }

        .cart-icon {
            font-size: 20px;
            transition: all 0.2s ease;
        }

        .cart-badge {
            position: absolute;
            top: -6px;
            right: -6px;
            background: var(--accent-color);
            color: white;
            border-radius: 50%;
            min-width: 20px;
            height: 20px;
            display: flex;
            align-items: center;
            justify-content: center;
            font-size: 11px;
            font-weight: 700;
            border: 2px solid white;
            box-shadow: var(--shadow-md);
        }

            .cart-badge.empty {
                display: none;
            }

        .admin-dropdown {
            position: relative;
        }

        .admin-btn {
            background: linear-gradient(135deg, #f59e0b, #d97706);
            border: none;
            color: white;
            padding: 10px 16px;
            border-radius: 12px;
            font-weight: 600;
            font-size: 14px;
            display: flex;
            align-items: center;
            gap: 8px;
            transition: all 0.2s ease;
        }

            .admin-btn:hover {
                background: linear-gradient(135deg, #d97706, #b45309);
                transform: translateY(-1px);
                box-shadow: var(--shadow-md);
            }

        .dropdown-menu {
            border: 1px solid var(--border-color);
            box-shadow: var(--shadow-lg);
            border-radius: 12px;
            padding: 8px;
            margin-top: 8px;
        }

        .dropdown-item {
            border-radius: 8px;
            padding: 12px 16px;
            font-weight: 500;
            color: var(--text-primary);
            transition: all 0.2s ease;
        }

            .dropdown-item:hover {
                background: var(--bg-light);
                color: var(--primary-color);
            }

        .navbar-toggler {
            border: none;
            padding: 8px;
            border-radius: 8px;
        }

            .navbar-toggler:focus {
                box-shadow: none;
            }

        .mobile-nav {
            background: var(--bg-white);
            border-top: 1px solid var(--border-color);
            padding: 20px 0;
        }

            .mobile-nav .nav-actions {
                flex-direction: column;
                gap: 16px;
                width: 100%;
            }

            .mobile-nav .nav-btn {
                width: 100%;
                justify-content: center;
            }

        .main-content {
            min-height: calc(100vh - 200px);
            padding: 0;
        }

        .footer {
            background: #1a1a1a;
            color: #e0e0e0;
            padding: 60px 0 30px;
            margin-top: 80px;
        }

            .footer h5 {
                color: white;
                font-weight: 700;
                margin-bottom: 24px;
                font-size: 18px;
            }

            .footer .brand-section h5 {
                color: var(--primary-color);
                font-size: 24px;
                font-weight: 800;
            }

            .footer p {
                color: #b0b0b0;
                line-height: 1.7;
                margin-bottom: 24px;
            }

            .footer ul {
                list-style: none;
                padding: 0;
            }

                .footer ul li {
                    margin-bottom: 12px;
                }

            .footer a {
                color: #b0b0b0;
                text-decoration: none;
                font-weight: 500;
                transition: all 0.2s ease;
                display: flex;
                align-items: center;
                gap: 8px;
            }

                .footer a:hover {
                    color: var(--primary-color);
                }

        .social-links {
            display: flex;
            gap: 16px;
            margin-top: 24px;
        }

            .social-links a {
                display: flex;
                align-items: center;
                justify-content: center;
                width: 44px;
                height: 44px;
                background: #333;
                border-radius: 12px;
                color: #b0b0b0;
                font-size: 18px;
                transition: all 0.2s ease;
            }

                .social-links a:hover {
                    background: var(--primary-color);
                    color: white;
                    transform: translateY(-2px);
                }

        .footer-bottom {
            border-top: 1px solid #333;
            padding-top: 30px;
            margin-top: 50px;
            text-align: center;
        }

            .footer-bottom p {
                margin: 0;
                color: #888;
                font-size: 14px;
            }

        @@media (max-width: 991.98px) {
            .announcement-bar .container {
                flex-direction: column;
                gap: 8px;
            }

            .announcement-bar .contact-info {
                gap: 16px;
            }

            .navbar-brand {
                font-size: 28px;
            }

                .navbar-brand .logo-icon {
                    font-size: 32px;
                }

            .nav-actions {
                margin-top: 20px;
                width: 100%;
            }

            .footer {
                padding: 40px 0 20px;
                margin-top: 50px;
            }

                .footer .row > div {
                    margin-bottom: 30px;
                }
        }

        @@media (max-width: 575.98px) {
            .announcement-bar .contact-info {
                flex-direction: column;
                gap: 4px;
            }

            .nav-actions {
                flex-direction: column;
                gap: 12px;
            }

            .nav-btn {
                width: 100%;
                justify-content: center;
            }
        }

        @@keyframes fadeInUp {
            from {
                opacity: 0;
                transform: translateY(20px);
            }

            to {
                opacity: 1;
                transform: translateY(0);
            }
        }

        .fade-in-up {
            animation: fadeInUp 0.6s ease-out;
        }

        .text-gradient {
            background: linear-gradient(135deg, var(--primary-color), var(--accent-color));
            -webkit-background-clip: text;
            -webkit-text-fill-color: transparent;
            background-clip: text;
        }

        .btn-gradient {
            background: linear-gradient(135deg, var(--primary-color), var(--primary-hover));
            border: none;
            color: white;
            font-weight: 600;
            transition: all 0.2s ease;
        }

            .btn-gradient:hover {
                transform: translateY(-1px);
                box-shadow: var(--shadow-md);
                color: white;
            }
    </style>
</head>
<body>
    <div class="announcement-bar">
        <div class="container">
            <div class="contact-info">
                <span><i class="bi bi-telephone-fill me-1"></i> @Localizer["ContactPhone"]</span>
                <span><i class="bi bi-envelope-fill me-1"></i> @Localizer["ContactEmail"]</span>
            </div>
            <div class="shipping-info">@Localizer["ShippingInfo"]</div>
        </div>
    </div>
    <header class="main-header">
        <nav class="navbar navbar-expand-lg">
            <div class="container">
                <a class="navbar-brand" href="javascript:void(0)" style="pointer-events: none;">
                    <span class="logo-icon">🐾</span>
                    <span>@Localizer["BrandName"]</span>
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <i class="bi bi-list" style="font-size: 24px; color: var(--text-primary);"></i>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <div class="nav-actions ms-auto">
                        @if (User.IsInRole("Customer"))
                        {
                            <a asp-controller="ShoppingCart" asp-action="Index" class="cart-button text-decoration-none">
                                <i class="bi bi-bag-fill cart-icon"></i>
                                @{
                                    var cartCount = ViewBag.CartItemCount ?? 0;
                                }
                                @if (cartCount > 0)
                                {
                                    <span class="cart-badge">@cartCount</span>
                                }
                                else
                                {

                                    <span class="cart-badge empty">0</span>
                                }
                            </a>
                            <a class="nav-btn" asp-controller="Order" asp-action="History">
                                <i class="bi bi-clock-history"></i> @Localizer["OrderHistoryLink"]
                            </a>
                        }
                        @if (User.IsInRole("Admin"))
                        {
                            <div class="dropdown admin-dropdown">
                                <button class="admin-btn dropdown-toggle" type="button" data-bs-toggle="dropdown">
                                    <i class="bi bi-shield-check"></i> @Localizer["AdminMenuLabel"]
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="Order" asp-action="Index"><i class="bi bi-box-seam me-2 text-primary"></i> @Localizer["ManageOrdersLink"]</a></li>
                                    <li><a class="dropdown-item" asp-area="Admin" asp-controller="UserManagement" asp-action="Index"><i class="bi bi-people me-2 text-primary"></i> @Localizer["ManageUsersLink"]</a></li>
                                </ul>
                            </div>
                        }
                        <partial name="_LoginPartial" />
                        @{
                            var currentCulture = CultureInfo.CurrentUICulture.Name;
                        }
                        <form asp-controller="Home" asp-action="SetLanguage" method="post" asp-route-returnUrl="@Context.Request.Path" style="margin-left: 12px;">
                            <select name="culture" onchange="this.form.submit();" class="nav-btn" style="padding: 10px; border-radius: 12px; border: 2px solid var(--border-color);">
                                <option value="vi" selected="@(currentCulture.StartsWith("vi") ? "selected" : null)">@Localizer["LanguageVietnamese"]</option>
                                <option value="en" selected="@(currentCulture.StartsWith("en") ? "selected" : null)">@Localizer["LanguageEnglish"]</option>
                            </select>
                        </form>
                    </div>
                </div>
            </div>
        </nav>
    </header>
    <div class="main-content">
        <main role="main">@RenderBody()</main>
    </div>
    <footer class="footer">
        <div class="container">
            <div class="row">
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="brand-section">
                        <h5><i class="bi bi-heart-fill me-2"></i> @Localizer["FooterBrand"]</h5>
                        <p>@Localizer["FooterDescription"]</p>
                        <div class="social-links">
                            <a href="#" aria-label="@Localizer["SocialFacebook"]"><i class="bi bi-facebook"></i></a>
                            <a href="#" aria-label="@Localizer["SocialInstagram"]"><i class="bi bi-instagram"></i></a>
                            <a href="#" aria-label="@Localizer["SocialYouTube"]"><i class="bi bi-youtube"></i></a>
                            <a href="#" aria-label="@Localizer["SocialTikTok"]"><i class="bi bi-tiktok"></i></a>
                        </div>
                    </div>
                </div>
                <div class="col-lg-2 col-md-6 mb-4">
                    <h5>@Localizer["FooterProductsHeader"]</h5>
                    <ul>
                        <li><a href="#">@Localizer["ProductDogFood"]</a></li>
                        <li><a href="#">@Localizer["ProductCatFood"]</a></li>
                        <li><a href="#">@Localizer["ProductAccessories"]</a></li>
                        <li><a href="#">@Localizer["ProductToys"]</a></li>
                        <li><a href="#">@Localizer["ProductCare"]</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>@Localizer["FooterSupportHeader"]</h5>
                    <ul>
                        <li><a href="#"><i class="bi bi-arrow-return-left me-2"></i> @Localizer["SupportReturnPolicy"]</a></li>
                        <li><a href="#"><i class="bi bi-question-circle me-2"></i> @Localizer["SupportShoppingGuide"]</a></li>
                        <li><a href="#"><i class="bi bi-chat-dots me-2"></i> @Localizer["SupportFAQ"]</a></li>
                        <li><a href="#"><i class="bi bi-shield-check me-2"></i> @Localizer["SupportWarranty"]</a></li>
                        <li><a href="#"><i class="bi bi-headset me-2"></i> @Localizer["SupportConsulting"]</a></li>
                    </ul>
                </div>
                <div class="col-lg-3 col-md-6 mb-4">
                    <h5>@Localizer["FooterContactHeader"]</h5>
                    <ul>
                        <li><a href="#"><i class="bi bi-geo-alt-fill me-2 text-primary"></i> @Localizer["ContactAddress"]</a></li>
                        <li><a href="tel:1900000000"><i class="bi bi-telephone-fill me-2 text-success"></i> @Localizer["ContactPhoneFooter"]</a></li>
                        <li><a href="mailto:info@petshop.vn"><i class="bi bi-envelope-fill me-2 text-info"></i> @Localizer["ContactEmailFooter"]</a></li>
                        <li><a href="#"><i class="bi bi-clock-fill me-2 text-warning"></i> @Localizer["ContactHours"]</a></li>
                    </ul>
                </div>
            </div>
            <div class="footer-bottom"><p>@Localizer["FooterBottom"]</p></div>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script>
        function updateCartCount() {
            fetch('/ShoppingCart/GetCartCount', { method: 'GET', headers: { 'Content-Type': 'application/json' } })
                .then(r => r.json()).then(d => {
                    const b = document.querySelector('.cart-badge');
                    if (b) { d.count > 0 ? (b.textContent = d.count, b.classList.remove('empty')) : b.classList.add('empty'); }
                }).catch(e => console.log('Error:', e));
        }
        document.addEventListener('DOMContentLoaded', () => { updateCartCount(); const m = document.querySelector('.main-content'); if (m) m.classList.add('fade-in-up'); });
        document.addEventListener('cartUpdated', updateCartCount);
        document.querySelectorAll('a[href^="#"]').forEach(a => a.addEventListener('click', e => { e.preventDefault(); const t = document.querySelector(a.getAttribute('href')); if (t) t.scrollIntoView({ behavior: 'smooth' }); }));
    </script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>